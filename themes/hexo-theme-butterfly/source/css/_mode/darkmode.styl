if hexo-config('darkmode.enable') || hexo-config('display_mode') == 'dark'
  [data-theme='dark']
    body
      background-color: darken(rgba(18, 18, 18, 0.21), 2)
      color: alpha(#FFFFFF, .6)

    ::-webkit-scrollbar-thumb
      background: lighten(rgba(18, 18, 18, 0), 5)

    // 網站背景，footer背景
    #web_bg[data-type=color],
    #footer[data-type=color]
      background: darken(rgba(18, 18, 18, 0.23), 2)

    #web_bg
      background-image: url(https://cdn.hllqk.cn/2024/12/d3b63ce6f364ceaaa8b12750481b2da0.jpg)
      background-size: 100% 100%
      background-size: cover
      background-repeat: no-repeat center
    #footer[data-type=photo]:before
      position: absolute
      width: 100%
      height: 100%
      background-color: alpha($dark-black, .7)
      content: ''

    #page-header,
    .layout_post > #post,
    .layout_page > div:first-child:not(.recent-posts)
      background-color: rgba(18, 18, 18, 0.51)

    #sidebar
      background: rgba(18, 18, 18, 0.17)
      box-shadow: -.25rem 0 .25rem rgba(18, 18, 18, 0.56)

    #article-container code
      background: #2c2c2c

    .recent-posts
      .recent-post-item
        background: rgba(18, 18, 18, 0.55) !important

      .article-title
        color: alpha(#FFFFFF, .8) !important

    // 頭部
    #page-header
      &:before
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        background-color: alpha($dark-black, .7)
        content: ''

      & > #nav
        a
          color: alpha(#FFFFFF, .8) !important

        &.fixed
          background: alpha(rgba(18, 18, 18, 0.82), .8)
          box-shadow: 0 5px 6px -5px rgba(133, 133, 133, 0)

          .toggle-menu,
          #site-name,
          a
            color: alpha(#FFFFFF, .8)

        .menus_item_child
          background-color: lighten(rgba(18, 18, 18, 0.68), 5) !important

          li
            &:hover
              background: lighten(rgba(18, 18, 18, 0.79), 20) !important

            a
              color: alpha(#FFFFFF, .8)

      #site_subtitle
        & > span
          color: alpha(#FFFFFF, .6)

    // 代碼框
    #article-container
      pre,
      .highlight:not(.js-file-line-container)
        background-color: lighten(rgba(18, 18, 18, 0.76), 2) !important
        color: alpha(#FFFFFF, .6) !important

      figure.highlight
        .line:before
          color: alpha(#FFFFFF, .6) !important

        .gutter pre
          background-color: lighten(rgba(18, 18, 18, 0.8), 2) !important

        .hljs
          background-color: lighten(rgba(18, 18, 18, 0.78), 2) !important

    .highlight-tools
      background: lighten(rgba(18, 18, 18, 0.84), 3) !important
      color: #90a4ae !important

    blockquote
      background-color: lighten(rgba(18, 18, 18, 0.71), 10)
      color: alpha(#FFFFFF, .6)

    hr
      border: 2px dashed alpha(#FFFFFF, .3)
      background: 0

      &:before
        color: alpha(#FFFFFF, .6)

    .layout_post .tag_share .post-meta__tags
      border: 1px solid alpha(#FFFFFF, .6)
      color: alpha(#FFFFFF, .6)

      &:hover
        background: darken(#FFFFFF, 60)

    // 文章版權
    .post-copyright
      border: 1px solid alpha(#FFFFFF, .6)

      .post-copyright-meta
        color: alpha(#FFFFFF, .8)

      .post-copyright-info
        color: alpha(#FFFFFF, .6)

      &:after
        background: rgba(18, 18, 18, 0.85)

    // 音樂播放器
    .aplayer
      filter: brightness(.7)
      color: $dark-black

    // 右下角按鈕
    #rightside
      & > div
        & > button,
        & > a
          background-color: lighten(rgba(18, 18, 18, 0.79), 5)
          color: alpha(#FFFFFF, .6)

          &:hover
            background: lighten(rgba(18, 18, 18, 0.83), 20)

    // 打賞按鈕
    .post-reward
      .reward-button
        background-color: lighten(rgba(18, 18, 18, 0.85), 10) !important

      .reward-all
        background-color: lighten(rgba(18, 18, 18, 0.83), 10) !important

        &:after
          border-top: 13px solid lighten(rgba(18, 18, 18, 0.82), 10) !important

    .flink-list-item:before,
    .card-category-list-item a:hover,
    .card-archive-list-item a:hover,
    #bookmark-it
      background-color: lighten(rgba(18, 18, 18, 0.82), 10) !important

    img,
    .gist
      filter: brightness(.7)

    #article-container iframe
      filter: brightness(.7)

    // 側邊欄
    #aside_content
      .card-widget
        background: rgba(18, 18, 18, 0.78) !important

      .headline,
      .length_num,
      .aside-post_title,
      .card-category-list-link,
      .card-archive-list-link,
      .social-icon,
      .card-category-list-link-more,
      .card-archive-list-link-more
        color: alpha(#FFFFFF, .6) !important

    .button--animated:before
      background: lighten(rgba(18, 18, 18, 0.74), 20)

    #post-meta,
    #post-meta a,
    #footer-wrap,
    #footer-wrap a,
    .img-alt
      color: alpha(#FFFFFF, .6) !important

    .posttitle,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6
      color: alpha(#FFFFFF, .8)

    .recent-posts .post-meta__date,
    .recent-posts .article-meta,
    .recent-posts a,
    .post-reward .reward-button,
    .copy-button,
    .gutter pre,
    #bookmark-it,
    .copy-notice,
    .flink-list-item a,
    .category-list-link,
    .relatedPosts_date,
    .prev-post .label,
    .next-post .label
      color: alpha(#FFFFFF, .6) !important

    .prev_info,
    .next_info,
    .relatedPosts_title
      color: alpha(#FFFFFF, .8) !important

    // 時間軸界面
    .article-sort
      &-item__title
        color: alpha(#FFFFFF, .6)

      &-item:before,
      &-title:before
        background: rgba(18, 18, 18, 0.75)

    // 手機 MENU,TOC
    #mobile-sidebar
      #mobile-sidebar-menus
        background: rgba(18, 18, 18, 0.82)

        .headline
          color: alpha(#FFFFFF, .6) !important

        .length_num
          color: alpha(#FFFFFF, .8) !important

        a
          color: alpha(#FFFFFF, .6) !important

    // error 404
    #error-wrap
      .error-content
        background: rgba(18, 18, 18, 0.67)

        .error-img
          filter: brightness(.7)

        .error-info
          .error_title
            color: alpha(#FFFFFF, .8)

          .error_subtitle
            color: alpha(#FFFFFF, .6)

          a
            background: #2c2c2c

    // note
    if hexo-config('note.style') == 'modern'
      .note
        filter: brightness(.7)

    if hexo-config('note.style') == 'flat'
      .note
        filter: brightness(.7)
        color: #4c4948

    // hide-tags
    .hide-button,
    .btn-beautify
      filter: brightness(.8)

    // tabs
    #article-container
      .tabs
        border: 2px solid #2c2c2c
        border-top: none

        > .nav-tabs
          background: #2c2c2c

          button
            border-top: 2px solid #2c2c2c
            background: #2c2c2c
            color: alpha(#FFFFFF, .6)

          .tab:not(.active)
            button
              &:hover
                border-top: 2px solid lighten(rgba(18, 18, 18, 0.63), 20)
                background: lighten(rgba(18, 18, 18, 0.79), 20)

          .active
            button
              background: rgba(18, 18, 18, 0.65)

    // 第三方
    // 插件 hexo-blog-encrypt
    #hexo-blog-encrypt
      label,
      input
        color: alpha(#FFFFFF, .6) !important

      input
        background-color: rgba(18, 18, 18, 0.75)

    .mermaid
      filter: brightness(.7)

    if hexo-config('gitalk') && hexo-config('gitalk.enable')
      #gitalk-container
        .gt-header-textarea,
        .gt-header-preview,
        .gt-comment-content,
        button,
        .gt-popup
          filter: brightness(.7)

        svg
          fill: alpha(#FFFFFF, .6) !important

    if hexo-config('valine') && hexo-config('valine.enable')
      #vcomment
        .vbtn,
        .vat
          border: 1px solid alpha(#FFFFFF, .6)
          background: rgba(18, 18, 18, 0.69) !important
          color: alpha(#FFFFFF, .6) !important

          &:hover
            background: lighten(rgba(18, 18, 18, 0.65), 20) !important

    if hexo-config('local_search') && hexo-config('local_search.enable')
      #local-search
        background: rgba(18, 18, 18, 0.53)

        .local-search-box--input
          background: rgba(18, 18, 18, 0.46)
          color: alpha(#FFFFFF, .6)

        .search-result-title
          color: alpha(#FFFFFF, .6)

    if hexo-config('algolia_search.enable')
      #algolia-search
        background: rgba(18, 18, 18, 0.6)

        .ais-search-box--input
          background: rgba(18, 18, 18, 0.68)
          color: alpha(#FFFFFF, .6)

        #algolia-search-results
          .algolia-hit-item-link
            color: alpha(#FFFFFF, .6)

    if hexo-config('disqusjs.enable')
      #disqus_thread
        #dsqjs
          .dsqjs-tab-active,
          .dsqjs-no-comment
            color: alpha(#FFFFFF, .6)

          .dsqjs-order-label
            background-color: lighten(rgba(18, 18, 18, 0.51), 5)

          .dsqjs-post-body
            color: alpha(#FFFFFF, .6)

            code,
            pre
              background: #2c2c2c

            blockquote
              color: alpha(#FFFFFF, .6)

    if hexo-config('preloader')
      #loading-box
        .loading-left-bg,
        .loading-right-bg,
        .configure-core
          background-color: darken(rgba(18, 18, 18, 0.58), 2)

        .loading-word
          color: alpha(#FFFFFF, .6)
